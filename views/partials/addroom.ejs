
<div class="container">
  <h2>Adding a room</h2>
  <form id="addRoomForm" class="form-horizontal">
    <div class="form-group">
      <label class="control-label col-sm-2" for="roomname">Room Name: </label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="roomname" placeholder="Enter room's name">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="">Number of Lights:</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="numoflights" placeholder="Enter number of lights">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="">Building Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="buildingname" placeholder="e.g Volen">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="">Room Number:</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="roomnumber" placeholder="e.g 111">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="">Pi's Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="piname" placeholder="Enter Pi's name">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="">Pi's Address:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="piadd" placeholder="e.g 255.255.255.255">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button id="submitToDatabase" type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>

