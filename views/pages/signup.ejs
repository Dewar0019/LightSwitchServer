<!-- views/signup.ejs -->
<!doctype html>
<html>
	<head>
		<% include ../partials/head %>
		<link href="/css/login.css" rel="stylesheet"/>
	</head>
	<body >
		<div class="wrapper">
			<div class="content login-container">
				<h2 class="login-title"><span id="span1">New User</span> Registration</h2>
				<!-- show any messages that come back with authentication -->
				<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>
				<!-- LOGIN FORM -->
				<form action="/signup" method="post">
					<div class="form-group">
						<input placeholder="Email" type="text" class="form-input" name="email">
					</div>
					<div class="form-group">
						<input placeholder="Password" type="password" class="form-input" name="password">
					</div>
					<div class="login-form">
						<button type="submit" class="btn btn-custom btn-primary">Signup</button>
						<p id="span1">Already have an account? <a href="/login" id="span2">Login</a></p>
					</div>
				</form>
			</div>
		</div>
	</body>
</html>
