<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body id="entirePage">
        <div class="wrapper">
            <div class="sidebar" data-color="azure" data-image="/img/back2.jpg">
                <div class="sidebar-wrapper">
                    <div class="logo">
                        <h1>LightSwitch</h1>
                    </div>
                    <ul class="nav">
                        <%for(var i =0; i<rooms.length; i++)  {
                        if(rooms[i]._id !== null) {
                        %>
                        <li class="active">
                            <a class="rooms" href="#" room-id="<%-rooms[i]._id%>">
                                <p> <%= rooms[i].displayName %> </p>
                            </a>
                        </li>
                        <% }
                        };  %>
                    </ul>
                    <div style="position: absolute; bottom: 10; left: 10;">
                        <!--<a href="../partials/addroom.ejs" class="btn btn-warning" role="button" id=addroombutton> + </a> -->
                    <button type="button" class="btn btn-warning" role="button" id="addroombutton"> + </a>
                </div>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <% include ../partials/nav%>
            </nav>
            <div class="result">
                <%
                var notNull=0;
                for(var i =0; i<rooms.length; i++)  {
                    if(rooms[i]._id !== null) {
                    notNull = i
                    }
                }
                if(rooms.length > 0) { %>
                <%- include('room', {room: rooms[notNull]}) %>
                <%} else { %>
                    <h1> No Rooms Found </h1>
                <%}%>
            </div>
        </div>
    </div>
</body>
<footer>
    <% include ../partials/footer %>
</footer>
</html>